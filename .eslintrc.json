{
  "env": {
    "node": true,
    "es2021": true,
    "browser": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-constant-condition": "warn",
    "eqeqeq": ["warn", "always"],
    "curly": "warn",
    "no-var": "warn"
  }
}
