generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id    Int      @id @default(autoincrement())
    name  String
    email String   @unique
    tel   String?
    deck  Deck[]

    // decks Deck[]
}

// TODO: definir modelos del proyecto:
